<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
    <com.l.eyescure.view.TopBarView
        android:id="@+id/add_account_view_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/ll_add"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium_size"
                android:text="账        号："/>
            <EditText
                android:id="@+id/name_et"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:background="@drawable/edit_bg_shape"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium_size"
                android:text="医师姓名："/>
            <EditText
                android:id="@+id/et_user_nick"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:background="@drawable/edit_bg_shape"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_change_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium_size"
                android:text="设置密码："/>
            <EditText
                android:id="@+id/new_pwd_et"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:background="@drawable/edit_bg_shape"/>

            <CheckBox
                android:id="@+id/add_acc_new_pwd_cb"
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cb_password"
                android:button="@null"
                android:checked="false"
                android:visibility="invisible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:focusableInTouchMode="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium_size"
                android:text="重复密码："/>
            <EditText
                android:id="@+id/new_pwd1_et"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:background="@drawable/edit_bg_shape"/>

            <CheckBox
                android:id="@+id/add_acc_new_pwd1_cb"
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cb_password"
                android:button="@null"
                android:checked="false"
                android:visibility="invisible"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:id="@+id/change_ok"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="确定"
        android:textSize="19sp"
        android:background="@drawable/login_btn1_bg"
        android:onClick="onClick"/>

</LinearLayout>