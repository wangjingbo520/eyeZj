<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <com.l.eyescure.view.CTextView
                android:id="@+id/right_cure_tips_tv"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="请将治疗头装在眼表"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="OD"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/tv_red"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="@color/black">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:background="@mipmap/cure_connect_od"/>
            <TextView
                android:id="@+id/cure_right_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="40dp"
                android:text="@string/zhuang_yanbiao"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/self_plus"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cure_right_connect"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@mipmap/cure_od"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="10dp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <com.l.eyescure.view.CTextView
                android:id="@+id/left_cure_tips_tv"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="请将治疗头装在眼表"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="OS"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/tv_red"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/black">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:background="@mipmap/cure_connect_os"/>
            <TextView
                android:id="@+id/cure_left_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="40dp"
                android:text="@string/zhuang_yanbiao"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/self_plus"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cure_left_connect"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@mipmap/cure_os"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>