<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/main_bg">

    <RelativeLayout
        android:id="@+id/r_right_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <Button
            android:id="@+id/right_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/right_start_btn" />

        <Button
            android:id="@+id/right_btn_above"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:background="@drawable/bottom_disable" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r_right_stop_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/r_right_btn">

        <Button
            android:id="@+id/right_stop_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/right_stop_btn" />

        <Button
            android:id="@+id/right_stop_btn_above"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:background="@drawable/bottom_disable" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r_mid_btn"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/botton_center">

        <Button
            android:id="@+id/mid_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/mid_start_btn" />

        <Button
            android:id="@+id/mid_btn_above"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:background="@drawable/bottom_disable" />
    </RelativeLayout>

    <TextView
        android:id="@+id/botton_center"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/r_mid_stop_btn"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/botton_center">

        <Button
            android:id="@+id/mid_stop_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/mid_stop_btn" />

        <Button
            android:id="@+id/mid_stop_btn_above"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:background="@drawable/bottom_disable" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r_left_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/r_left_stop_btn">

        <Button
            android:id="@+id/left_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/left_start_btn" />

        <Button
            android:id="@+id/left_btn_above"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:background="@drawable/bottom_disable" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r_left_stop_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/left_stop_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/left_stop_btn" />

        <Button
            android:id="@+id/left_stop_btn_above"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:background="@drawable/bottom_disable" />
    </RelativeLayout>

</RelativeLayout>