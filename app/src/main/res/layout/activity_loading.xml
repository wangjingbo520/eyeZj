<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/loading_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_name"
        android:textColor="@color/black"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/loading_tv_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/x20"
        android:text="@string/loading_en"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loading_tv_name"/>
    <TextView
        android:id="@+id/loading_tv_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/x20"
        android:text="@string/loading_main_name"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:layout_below="@id/loading_tv_en"/>

    <TextView
        android:id="@+id/loading_main_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loading_tv_main_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="@string/loading_main_version"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/loading_tv_name"
        android:layout_marginBottom="@dimen/x20"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/logo_small"/>
    <com.hanks.htextview.HTextView
        android:id="@+id/loading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loading_tv_main_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@color/text333"
        android:textSize="15sp"/>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorName="BallPulseIndicator"
        app:indicatorColor="@color/colorPrimary"
        android:layout_below="@id/loading_tv_main_name"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="30dp"
        />
</RelativeLayout>